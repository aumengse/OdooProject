<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="reseller_tree_view">
			<field name="name">product.tree</field>
			<field name="model">payment_reseller.products</field>
			<field name="arch" type="xml">
				<tree string="Products">
					<field name="name"/>
					<field name="rs_price"/>
				</tree>
			</field>
		</record>
	
		<record model="ir.ui.view" id="reseller_form_view">
			<field name="name">product.form</field>
			<field name="model">payment_reseller.products</field>
			<field name="arch" type="xml">
				<form string="Reseller">
					<sheet>
						<group>
							<field name="name"></field>
							<field name="rs_price"></field>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
