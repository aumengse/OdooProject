<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="report_tree_view">
			<field name="name">report.tree</field>
			<field name="model">payment_reseller.report</field>
			<field name="arch" type="xml">
				<tree string="Report">
					<field name="rfrom"></field>
					<field name="rto"></field>
					<field name="rselection"></field>	
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="report_form_view">
	        <field name="name">report.form</field>
	        <field name="model">payment_reseller.report</field>
	        <field name="arch" type="xml">
	            <form string="Report Form">
	                <sheet>
	                	<group>
	                		<group>
	                        	<field name="rfrom"/>
		                    </group>
		                    <group>
	                    		<field name="rto"/>
	                   		</group>
	                	</group>
	                	<group>
	                		<field name="rselection"/>
	                		<field name="reseller_ids" attrs="{'invisible': [('rselection','!=','reseller')]}"/>
	                	</group>
	                </sheet>
	                <footer>
	                	<button name="action_generate" 
        	           			type="object"
                       			string="Generate"
                       			class="oe_highlight"/>
	                </footer>
	            </form>
	        </field>
        </record>

		<record model="ir.actions.act_window" id="report_list_action">
			<field name="name">Report</field>
			<field name="res_model">payment_reseller.report</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create"> Create first Payment...
				</p>
			</field>
		</record>
	</data>
</openerp>