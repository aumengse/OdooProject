<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="podet_tree_view">
			<field name="name">payment.tree</field>
			<field name="model">payment_reseller.payment</field>
			<field name="arch" type="xml">
				<tree string="Payment" editable="bottom">
					<field name="payment_date"></field>
					<field name="po_det_id"></field>	
				</tree>
			</field>
		</record>
		
	
		<record model="ir.ui.view" id="podet_form_view">
			<field name="name">payment.form</field>
			<field name="model">payment_reseller.payment</field>
			<field name="arch" type="xml">
				<form string="Payment">
					<sheet>
						<group>	
							<field name="payment_date"></field>
							<field name="reseller_po_id"></field>
							<field name="prod_paymentdet_id"></field>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="purchase_list_action">
			<field name="name">Purchase Order</field>
			<field name="res_model">payment_reseller.po_head</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create"> Create first Purchase...
				</p>	
			</field>
		</record>
	
	</data>
</openerp>